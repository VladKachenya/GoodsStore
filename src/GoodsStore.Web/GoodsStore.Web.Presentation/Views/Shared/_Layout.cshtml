<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Goods Shop</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body class="container">
    <ul class="nav border-bottom header">
        <li class="nav-item p-2 alert-primary">
            @*<a class="nav-link active" href="#">Active</a>*@
            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link ">Goods Store</a>
        </li>
        <li class="nav-item p-2">
            @*<a class="nav-link active" href="#">Active</a>*@
            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
        </li>
    </ul>
    <div >
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Shop</p>
        </footer>
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
